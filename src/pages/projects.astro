---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Featured</div>
  </div>

  <HorizontalCard
    title="WojtusDiscord"
    img="/post_img.webp"
    desc="Discord bot for a private server with overcomplicated underlying infrastructure"
    url="https://github.com/wiktorkowalski/wojtusdiscord"
    badge="Featured"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Personal</div>
  </div>

  <HorizontalCard
    title="Personal Website"
    img="/post_img.webp"
    desc="Personal website built with Astro and TailwindCSS"
    url="https://github,com/wiktorkowalski/website"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Blog"
    img="/post_img.webp"
    desc="Blog built with Astro and TailwindCSS"
    url="https://github.com/wiktorkowalski/blog"
  />
</BaseLayout>
